{
  "title": "Prevent exiting full screen on pressing ESC",
  "rules": [
    {
      "description": "Remaps escape to shift-escape",
      "manipulators": [
        {
          "from": {
            "key_code": "escape"
          },
          "to": [
            {
              "key_code": "escape",
              "modifiers": [
                "shift"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
