{
    "title": "Tomita-shiki modifications",
    "rules": [
        {
            "description": "left command + J/I/K/L で矢印(左/上/下/右)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ],
                            "optional": [
                                "any"
                            ]
                        },
                        "key_code": "j"
                    },
                    "to": [
                        {
                            "repeat": true,
                            "key_code": "left_arrow"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ],
                            "optional": [
                                "any"
                            ]
                        },
                        "key_code": "k"
                    },
                    "to": [
                        {
                            "repeat": true,
                            "key_code": "down_arrow"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ],
                            "optional": [
                                "any"
                            ]
                        },
                        "key_code": "i"
                    },
                    "to": [
                        {
                            "repeat": true,
                            "key_code": "up_arrow"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ],
                            "optional": [
                                "any"
                            ]
                        },
                        "key_code": "l"
                    },
                    "to": [
                        {
                            "repeat": true,
                            "key_code": "right_arrow"
                        }
                    ]
                }
            ]
        },
        {
            "description": "英数キーで英数かな切替",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "type": "input_source_if",
                            "input_sources": [
                                {
                                    "language": "ja"
                                }
                            ]
                        }
                    ],
                    "type": "basic",
                    "from": {
                        "key_code": "japanese_kana"
                    },
                    "to": [
                        {
                            "key_code": "japanese_eisuu"
                        }
                    ]
                },
                {
                    "conditions": [
                        {
                            "type": "input_source_unless",
                            "input_sources": [
                                {
                                    "language": "ja"
                                }
                            ]
                        }
                    ],
                    "type": "basic",
                    "from": {
                        "key_code": "japanese_eisuu"
                    },
                    "to": [
                        {
                            "key_code": "japanese_kana"
                        }
                    ]
                }
            ]
        },
        {
            "description": "left command + M(,) で左(右)クリック",
