{
  "title": "Personal rules (@dziaineka)",
  "rules": [
    {
      "description": "Left CMD -> en",
      "manipulators": [
        {
          "to_if_alone": [{ "select_input_source": { "language": "en" } }],
          "from": { "key_code": "left_command" },
          "to": [{ "key_code": "left_command" }],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Right CMD -> ruby",
      "manipulators": [
        {
          "to_if_alone": [{ "select_input_source": { "language": "be" } }],
          "from": { "key_code": "right_command" },
          "to": [{ "key_code": "right_command" }],
          "type": "basic"
        }
      ]
    },
    {
      "description": "caps_lock toggle to get into vim-like navigation (but different)",
      "manipulators": [
        {
          "conditions": [
            {
              "name": "navigation_mode",
              "type": "variable_unless",
              "value": 1
            }
          ],
          "from": {
            "key_code": "caps_lock",
            "modifiers": { "optional": ["any"] }
          },
          "to_if_alone": [
            {
              "set_variable": {
                "name": "navigation_mode",
                "value": 1
              }
            },
            {
              "halt": true,
              "set_notification_message": {
                "id": "vim_mode_plus_enabled",
                "text": "Navigation Mode"
              }
            }
          ],
          "to": [{ "key_code": "left_control" }],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "navigation_mode",
              "type": "variable_if",
              "value": 1
            }
          ],
          "from": {
            "key_code": "caps_lock",
            "modifiers": { "optional": ["any"] }
          },
          "to_if_alone": [
            {
              "set_variable": {
                "name": "navigation_mode",
                "value": 0
              }
            },
            {
              "halt": true,
              "set_notification_message": {
                "id": "vim_mode_plus_enabled",
                "text": ""
              }
            }
          ],
          "to": [{ "key_code": "left_control" }],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "navigation_mode",
              "type": "variable_if",
              "value": 1
            }
          ],
          "from": {
            "key_code": "j"
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "navigation_mode",
              "type": "variable_if",
              "value": 1
            }
          ],
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
