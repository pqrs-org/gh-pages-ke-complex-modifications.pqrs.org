{
  "title": "Mac Mouse 4/5/6 desktop switcher",
  "rules": [
    {
      "description": "Mouse 4 Switch Right",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4"
          },
          "to": [
            {
              "repeat": false,
              "key_code": "right_arrow",
              "modifiers": [
                "left_control"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Mouse 5 Switch Left",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5"
          },
          "to": [
            {
              "repeat": false,
              "key_code": "left_arrow",
              "modifiers": [
                "left_control"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Mouse 6 Desktop Switcher",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button6"
          },
          "to": [
            {
              "repeat": false,
              "key_code": "up_arrow",
              "modifiers": [
                "left_control"
              ],
              "lazy": false
            }
          ]
        }
      ]
    }
  ]
}
