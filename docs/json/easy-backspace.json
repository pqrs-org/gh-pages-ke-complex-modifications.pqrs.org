{
  "title": "Easy Backspace Rules",
  "rules": [
    {
      "description": "Left Shift + Spacebar => Backspace",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "left_shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace",
              "lazy": true,
              "repeat": true
            }
          ]
        }
      ]
    },
    {
      "description": "Right Shift + Spacebar => Delete Forward",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "right_shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "delete_forward",
              "lazy": true,
              "repeat": true
            }
          ]
        }
      ]
    }
  ]
}
