{
  "title": " Switch EN/CH/JA with left_cmd, right_cmd, and right_option",
  "rules": [
    {
      "description": "left_cmd to English, right_cmd to Simplified Chinese, right_option to Japanese",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 100
          },
          "to": [
            {
              "key_code": "left_command",
              "lazy": true
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "left_command"
            }
          ],
          "to_if_alone": [
            {
              "select_input_source": {
                "language": "en"
              }
            }
          ]
          
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 100
          },
          "to": [
            {
              "key_code": "right_command",
              "lazy": true
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "right_command"
            }
          ],
          "to_if_alone": [
            {
              "select_input_source": {
                "language": "zh-Hans"
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_option",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 100
          },
          "to": [
            {
              "key_code": "right_option",
              "lazy": true
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "right_option"
            }
          ],
          "to_if_alone": [
            {
              "select_input_source": {
                "language": "ja"
              }
            }
          ]
        }
      ]
     

    }
  ]
}
