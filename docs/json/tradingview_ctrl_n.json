{
    "title": "TradingView shortcut (Ctrl + N)",
    "rules": [
      {
        "description": "Ctrl + N: New Chart -> down_arrow",
        "manipulators": [
          {
            "type": "basic",
            "from": {
              "key_code": "n",
              "modifiers": {
                "mandatory": ["control"]
              }
            },
            "to": [
              {
                "key_code": "down_arrow"
              }
            ],
            "conditions": [
              {
                "type": "frontmost_application_if",
                "bundle_identifiers": [
                  "^com\\.tradingview\\.*"
                ]
              }
            ]
          }
        ]
      }
    ]
  }