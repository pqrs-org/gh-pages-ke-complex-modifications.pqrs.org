{
  "title": "Switch EN/JP/KR with print_screen, scroll_lock, and application",
  "rules": [
    {
      "description": "print_screen to English, scroll_lock to Japanese, application to Korean",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "print_screen",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "select_input_source": {
                "language": "en"
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "scroll_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "select_input_source": {
                "language": "ja"
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "pause",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "select_input_source": {
                "language": "ko"
              }
            }
          ]
        }
      ]
    }
  ]
}
