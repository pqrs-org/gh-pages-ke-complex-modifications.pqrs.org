{
  "title": "Personal rules JIS (@toshi-ue) vi mode shortcut command in terminal apps",
  "rules": [
    {
      "description": "Discard changes in Terminal app",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2",
                "^com\\.microsoft\\.VSCode",
                "dev.warp.Warp-Stable"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "f11"
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            },
            {
              "key_code": "escape"
            },
            {
              "key_code": "quote"
            },
            {
              "key_code": "q"
            },
            {
              "key_code": "1",
              "modifiers": [
                "shift"
              ]
            },
            {
              "key_code": "return_or_enter"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Save changes in Terminal app",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2",
                "^com\\.microsoft\\.VSCode",
                "dev.warp.Warp-Stable"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "f12"
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            },
            {
              "key_code": "escape"
            },
            {
              "key_code": "quote"
            },
            {
              "key_code": "w"
            },
            {
              "key_code": "q"
            },
            {
              "key_code": "1",
              "modifiers": [
                "shift"
              ]
            },
            {
              "key_code": "return_or_enter"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
