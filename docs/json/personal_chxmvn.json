  "rules": [
    {
      "description": "Ctrl+Y => Cmd+Shift+Y (Redo) (German keyboard layout)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            },
            "key_code": "z"
          },
          "to": [
            {
              "repeat": false,
              "key_code": "y",
              "modifiers": [
                "left_shift",
                "left_command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\\\.microsoft\\\\.rdc$",
                "^com\\\\.microsoft\\\\.rdc\\\\.mac$",
