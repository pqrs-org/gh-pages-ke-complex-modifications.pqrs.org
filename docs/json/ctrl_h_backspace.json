{
  "title": "Change Ctrl+h to delete/backspace",
  "rules": [
    {
        "description": "Ctrl+h = delete/backspace",
        "manipulators": [
            {
                "from": {
                    "key_code": "h",
                    "modifiers": {
                        "mandatory": [
                            "control"
                        ],
                        "optional": []
                    }
                },
                "to": [
                    {
                        "key_code": "delete_or_backspace"
                    }
                ],
                "type": "basic"
            }
        ]
    }
  ]
}
