{
    "title": "Left ctrl + pnbf to up/down/left/right arrows",
    "rules": [
      {
        "description": "Left_Ctrl+p/Left_Ctrl+n/Left_Ctrl+b/Left_Ctrl+f to up/down/left/right arrows",
        "manipulators": [
          {
            "type": "basic",
            "from": {
              "key_code": "p",
              "modifiers": {
                "mandatory": ["left_control"],
                "optional": ["any"]
              }
            },
            "to": [
              {
                "key_code": "up_arrow"
              }
            ]
          },
          {
            "type": "basic",
            "from": {
              "key_code": "n",
              "modifiers": {
                "mandatory": ["left_control"],
                "optional": ["any"]
              }
            },
            "to": [
              {
                "key_code": "down_arrow"
              }
            ]
          },
          {
            "type": "basic",
            "from": {
              "key_code": "b",
              "modifiers": {
                "mandatory": ["left_control"],
                "optional": ["any"]
              }
            },
            "to": [
              {
                "key_code": "left_arrow"
              }
            ]
          },
          {
            "type": "basic",
            "from": {
              "key_code": "f",
              "modifiers": {
                "mandatory": ["left_control"],
                "optional": ["any"]
              }
            },
            "to": [
              {
                "key_code": "right_arrow"
              }
            ]
          }
        ]
      }
    ]
  }
  